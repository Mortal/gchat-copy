{
"manifest_version": 2,
    "name": "Google Chat thread links (fork of upman/gchat-copy)",
    "description": "Adds button to copy links to threads on Google Chat (fork of upman/gchat-copy)",
    "version": "0.0.13",
    "content_scripts": [
        {
            "matches": [
                "https://chat.google.com/*",
                "https://mail.google.com/chat/*"
            ],
            "all_frames": true,
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}